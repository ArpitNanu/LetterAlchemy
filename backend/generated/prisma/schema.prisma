generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model user {
  id          Int     @id @default(autoincrement())
  email       String  @unique
  firstName   String
  lastName    String?
  bio         String?
  socialLinks String?
  posts       post[]
}

model post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  published Boolean   @default(false)
  views     Int       @default(0)
  author    user      @relation(fields: [authorId], references: [id])
  authorId  Int
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  comments  comment[]
  likes     like[]
}

model comment {
  id        Int      @id @default(autoincrement())
  text      String
  post      post     @relation(fields: [postId], references: [id])
  postId    Int
  createdAt DateTime @default(now())
}

model like {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  post      post     @relation(fields: [postId], references: [id])
  postId    Int
}
